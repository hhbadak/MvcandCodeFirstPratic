@model IEnumerable<MVCAndCodeFirstPracticaWeb.Models.Categories>
@using MVCAndCodeFirstPracticaWeb.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container table w-25">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
            </tr>
        </thead>
        <tbody>
            @{ foreach (Categories item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                    </tr>
                }}
        </tbody>
    </table>
    <div>
        <a type="submit" class="btn btn-dark w-50 float-end" href="@Url.Action("Create","Category")">Kategori Ekleme</a>
    </div>
</div>